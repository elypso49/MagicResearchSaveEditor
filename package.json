{
  "name": "magic-research-save-editor",
  "version": "1.0.0",
  "description": "An application to load, edit, and export game save files",
  "main": "server/server.js",
  "scripts": {
    "start": "node server/server.js",
    "dev:server": "nodemon server/server.js",
    "dev:client": "cd client && ng serve",
    "dev": "concurrently \"npm run dev:server\" \"npm run dev:client\"",
    "install:client": "cd client && npm install",
    "build:client": "cd client && ng build",
    "postinstall": "npm run install:client"
  },
  "keywords": [
    "save-editor",
    "game",
    "angular",
    "nodejs"
  ],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "axios": "^1.6.2",
    "cors": "^2.8.5",
    "express": "^4.18.2",
    "morgan": "^1.10.0"
  },
  "devDependencies": {
    "concurrently": "^8.2.2",
    "nodemon": "^3.0.1"
  }
}